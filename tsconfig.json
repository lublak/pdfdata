{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			"es2017",
			"dom"
		],
		"allowJs": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"node",
			"jest"
		],
		"sourceMap": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules", 
		"**/*.spec.ts"
	]
}